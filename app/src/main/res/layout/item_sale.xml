<?xml version="1.0" encoding="utf-8"?>
<androidx.cardview.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:layout_margin="8dp"
    app:cardCornerRadius="8dp"
    app:cardElevation="2dp"
    app:cardBackgroundColor="@color/card_background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:padding="16dp">

        <!-- Sale Icon -->
        <ImageView
            android:id="@+id/iv_sale_icon"
            android:layout_width="40dp"
            android:layout_height="40dp"
            android:src="@drawable/ic_cart"
            android:tint="@color/success_green"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <!-- Product Name -->
        <TextView
            android:id="@+id/tv_sale_product_name"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginEnd="8dp"
            android:text="Product Name"
            android:textSize="16sp"
            android:textStyle="bold"
            android:textColor="@color/text_primary"
            app:layout_constraintTop_toTopOf="@id/iv_sale_icon"
            app:layout_constraintStart_toEndOf="@id/iv_sale_icon"
            app:layout_constraintEnd_toStartOf="@id/tv_sale_amount"
            tools:text="Samsung Galaxy S21" />

        <!-- Sale Date -->
        <TextView
            android:id="@+id/tv_sale_date"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Date"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/tv_sale_product_name"
            app:layout_constraintStart_toEndOf="@id/iv_sale_icon"
            app:layout_constraintEnd_toStartOf="@id/tv_sale_amount"
            tools:text="Oct 30, 2025" />

        <!-- Quantity -->
        <TextView
            android:id="@+id/tv_sale_quantity"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_marginStart="12dp"
            android:layout_marginTop="4dp"
            android:text="Qty: 0"
            android:textSize="12sp"
            android:textColor="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/tv_sale_date"
            app:layout_constraintStart_toEndOf="@id/iv_sale_icon"
            app:layout_constraintEnd_toStartOf="@id/tv_sale_amount"
            tools:text="Qty: 2" />

        <!-- Total Amount -->
        <TextView
            android:id="@+id/tv_sale_amount"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="R0.00"
            android:textSize="18sp"
            android:textStyle="bold"
            android:textColor="@color/success_green"
            app:layout_constraintTop_toTopOf="@id/iv_sale_icon"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="R1,399.98" />

        <!-- Sale ID -->
        <TextView
            android:id="@+id/tv_sale_id"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="4dp"
            android:text="ID: 001"
            android:textSize="10sp"
            android:textColor="@color/text_secondary"
            app:layout_constraintTop_toBottomOf="@id/tv_sale_amount"
            app:layout_constraintEnd_toEndOf="parent"
            tools:text="ID: 001" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</androidx.cardview.widget.CardView>